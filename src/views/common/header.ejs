<!-- side bar area  -->
<div id="side-bar" class="fixed inset-y-0 right-0 z-50 w-64 bg-white dark:bg-gray-900 shadow-lg dark:shadow-gray-800 transform translate-x-full transition-transform duration-300 ease-in-out">
  <button class="absolute top-4 left-4 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white close-icon-menu">
    <i class="ri-close-line text-2xl"></i>
  </button>
  <!-- mobile menu area start -->
  <div class="flex flex-col justify-between h-full pt-16 pb-8 px-6">
    <nav>
      <ul class="space-y-4">
        <li class="<%= path_name === "/" ? "text-blue-600 dark:text-blue-400 font-semibold" : "text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400" %>">
          <a href="/" class="flex items-center space-x-2">
            <i class="ri-home-line"></i>
            <span>Home</span>
          </a>
        </li>
        <li class="<%= path_name === "/api-docs" ? "text-blue-600 dark:text-blue-400 font-semibold" : "text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400" %>">
          <a href="/api-docs" class="flex items-center space-x-2">
            <i class="ri-file-text-line"></i>
            <span>API Docs</span>
          </a>
        </li>
        <li class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
          <a href="https://github.com/mrgoonie/url-review" target="_blank" class="flex items-center space-x-2">
            <i class="ri-github-line"></i>
            <span>Contribute</span>
          </a>
        </li>
      </ul>
    </nav>
    <% if (user) { %>
    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
      <a href="/profile" class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 mb-3">
        <i class="ri-user-line"></i>
        <span><%= user.name %></span>
      </a>
      <a href="/logout" class="flex items-center space-x-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">
        <i class="ri-logout-box-line"></i>
        <span>Logout</span>
      </a>
    </div>
    <% } %>
    <!-- dark/light icon -->
    <button id="theme-toggle-mobile" class="text-gray-600 hover:text-yellow-500 dark:text-gray-300 dark:hover:text-yellow-400 tippy block w-full text-left py-2" data-tippy-content="Toggle theme" data-tippy-placement="bottom">
      <i class="ri-sun-line dark:hidden text-xl align-middle"></i>
      <i class="ri-moon-line hidden dark:block text-xl align-middle"></i>
      <span class="ml-2">Toggle Theme</span>
    </button>
    <ul class="social-area-one flex space-x-4 mt-12 justify-center">
      <li><a href="https://x.com/goon_nguyen" target="_blank" class="text-gray-600 hover:text-black dark:text-gray-300 dark:hover:text-white"><i class="ri-twitter-x-line text-2xl"></i></a></li>
      <li><a href="https://fb.com/mrgoonie" target="_blank" class="text-gray-600 hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"><i class="ri-facebook-circle-fill text-2xl"></i></a></li>
    </ul>
  </div>
  <!-- mobile menu area end -->
</div>
<!-- side bar area end -->